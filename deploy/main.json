{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.40.2.10011",
      "templateHash": "13129102640643064827"
    }
  },
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure region for all resources."
      }
    },
    "baseName": {
      "type": "string",
      "defaultValue": "az-scout",
      "metadata": {
        "description": "Base name used as prefix for all resources."
      }
    },
    "containerImageTag": {
      "type": "string",
      "defaultValue": "latest",
      "metadata": {
        "description": "Container image tag to deploy (e.g. \"latest\", \"2026.2.5\")."
      }
    },
    "containerImage": {
      "type": "string",
      "defaultValue": "[format('ghcr.io/lrivallain/az-scout:{0}', parameters('containerImageTag'))]",
      "metadata": {
        "description": "Full container image reference. Override to use a private registry."
      }
    },
    "containerCpu": {
      "type": "string",
      "defaultValue": "0.5",
      "metadata": {
        "description": "CPU cores allocated to the container (e.g. \"0.5\", \"1.0\")."
      }
    },
    "containerMemory": {
      "type": "string",
      "defaultValue": "1.0Gi",
      "metadata": {
        "description": "Memory allocated to the container (e.g. \"1.0Gi\")."
      }
    },
    "minReplicas": {
      "type": "int",
      "defaultValue": 0,
      "minValue": 0,
      "maxValue": 10,
      "metadata": {
        "description": "Minimum number of replicas (0 allows scale-to-zero)."
      }
    },
    "maxReplicas": {
      "type": "int",
      "defaultValue": 2,
      "minValue": 1,
      "maxValue": 10,
      "metadata": {
        "description": "Maximum number of replicas."
      }
    },
    "readerSubscriptionIds": {
      "type": "array",
      "defaultValue": [],
      "metadata": {
        "description": "Subscription IDs to grant Reader access to the managed identity. Pass as a JSON array."
      }
    },
    "enableSpotScoreRole": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Assign Virtual Machine Contributor role for Spot Placement Scores. Set to false if you don't need spot scores."
      }
    },
    "enableAuth": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "Enable Entra ID authentication (EasyAuth) on the Container App."
      }
    },
    "authClientId": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Entra ID App Registration Client ID (required when enableAuth is true)."
      }
    },
    "authClientSecret": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "Entra ID App Registration Client Secret (required when enableAuth is true)."
      }
    },
    "authTenantId": {
      "type": "string",
      "defaultValue": "[tenant().tenantId]",
      "metadata": {
        "description": "Entra ID tenant ID for authentication. Defaults to the deployment tenant."
      }
    }
  },
  "variables": {
    "readerRoleId": "acdd72a7-3385-48ef-bd42-f606fba81ae7"
  },
  "resources": [
    {
      "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
      "apiVersion": "2023-01-31",
      "name": "[format('{0}-identity', parameters('baseName'))]",
      "location": "[parameters('location')]"
    },
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2023-09-01",
      "name": "[format('{0}-logs', parameters('baseName'))]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": {
          "name": "PerGB2018"
        },
        "retentionInDays": 30
      }
    },
    {
      "type": "Microsoft.App/managedEnvironments",
      "apiVersion": "2024-03-01",
      "name": "[format('{0}-env', parameters('baseName'))]",
      "location": "[parameters('location')]",
      "properties": {
        "appLogsConfiguration": {
          "destination": "log-analytics",
          "logAnalyticsConfiguration": {
            "customerId": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', format('{0}-logs', parameters('baseName'))), '2023-09-01').customerId]",
            "sharedKey": "[listKeys(resourceId('Microsoft.OperationalInsights/workspaces', format('{0}-logs', parameters('baseName'))), '2023-09-01').primarySharedKey]"
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.OperationalInsights/workspaces', format('{0}-logs', parameters('baseName')))]"
      ]
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2024-03-01",
      "name": "[parameters('baseName')]",
      "location": "[parameters('location')]",
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[format('{0}', resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', format('{0}-identity', parameters('baseName'))))]": {}
        }
      },
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', format('{0}-env', parameters('baseName')))]",
        "configuration": {
          "ingress": {
            "external": true,
            "targetPort": 8000,
            "transport": "auto",
            "allowInsecure": false
          },
          "registries": [],
          "secrets": "[if(parameters('enableAuth'), createArray(createObject('name', 'microsoft-provider-authentication-secret', 'value', parameters('authClientSecret'))), createArray())]"
        },
        "template": {
          "containers": [
            {
              "name": "az-scout",
              "image": "[parameters('containerImage')]",
              "resources": {
                "cpu": "[json(parameters('containerCpu'))]",
                "memory": "[parameters('containerMemory')]"
              },
              "env": [
                {
                  "name": "AZURE_CLIENT_ID",
                  "value": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', format('{0}-identity', parameters('baseName'))), '2023-01-31').clientId]"
                }
              ]
            }
          ],
          "scale": {
            "minReplicas": "[parameters('minReplicas')]",
            "maxReplicas": "[parameters('maxReplicas')]",
            "rules": [
              {
                "name": "http-scaling",
                "http": {
                  "metadata": {
                    "concurrentRequests": "50"
                  }
                }
              }
            ]
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', format('{0}-env', parameters('baseName')))]",
        "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', format('{0}-identity', parameters('baseName')))]"
      ]
    },
    {
      "condition": "[parameters('enableAuth')]",
      "type": "Microsoft.App/containerApps/authConfigs",
      "apiVersion": "2024-03-01",
      "name": "[format('{0}/{1}', parameters('baseName'), 'current')]",
      "properties": {
        "platform": {
          "enabled": true
        },
        "globalValidation": {
          "unauthenticatedClientAction": "RedirectToLoginPage"
        },
        "identityProviders": {
          "azureActiveDirectory": {
            "registration": {
              "clientId": "[parameters('authClientId')]",
              "clientSecretSettingName": "microsoft-provider-authentication-secret",
              "openIdIssuer": "[format('{0}{1}/v2.0', environment().authentication.loginEndpoint, parameters('authTenantId'))]"
            },
            "validation": {
              "allowedAudiences": [
                "[format('api://{0}', parameters('authClientId'))]"
              ]
            }
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.App/containerApps', parameters('baseName'))]"
      ]
    },
    {
      "copy": {
        "name": "readerAssignments",
        "count": "[length(parameters('readerSubscriptionIds'))]"
      },
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2025-04-01",
      "name": "[format('reader-{0}', copyIndex())]",
      "subscriptionId": "[parameters('readerSubscriptionIds')[copyIndex()]]",
      "location": "[resourceGroup().location]",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "principalId": {
            "value": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', format('{0}-identity', parameters('baseName'))), '2023-01-31').principalId]"
          },
          "roleDefinitionId": {
            "value": "[variables('readerRoleId')]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "metadata": {
            "_generator": {
              "name": "bicep",
              "version": "0.40.2.10011",
              "templateHash": "3269672281124974006"
            }
          },
          "parameters": {
            "principalId": {
              "type": "string",
              "metadata": {
                "description": "Principal ID of the managed identity."
              }
            },
            "roleDefinitionId": {
              "type": "string",
              "metadata": {
                "description": "Role definition ID to assign (Reader by default)."
              }
            }
          },
          "resources": [
            {
              "type": "Microsoft.Authorization/roleAssignments",
              "apiVersion": "2022-04-01",
              "name": "[guid(subscription().subscriptionId, parameters('principalId'), parameters('roleDefinitionId'))]",
              "properties": {
                "principalId": "[parameters('principalId')]",
                "roleDefinitionId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', parameters('roleDefinitionId'))]",
                "principalType": "ServicePrincipal"
              }
            }
          ]
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', format('{0}-identity', parameters('baseName')))]"
      ],
      "metadata": {
        "description": "Assign Reader role to the managed identity on each target subscription."
      }
    },
    {
      "copy": {
        "name": "spotScoreRole",
        "count": "[length(parameters('readerSubscriptionIds'))]"
      },
      "condition": "[parameters('enableSpotScoreRole')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2025-04-01",
      "name": "[format('spot-score-{0}', copyIndex())]",
      "subscriptionId": "[parameters('readerSubscriptionIds')[copyIndex()]]",
      "location": "[resourceGroup().location]",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "principalId": {
            "value": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', format('{0}-identity', parameters('baseName'))), '2023-01-31').principalId]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "metadata": {
            "_generator": {
              "name": "bicep",
              "version": "0.40.2.10011",
              "templateHash": "1250306476753551681"
            }
          },
          "parameters": {
            "principalId": {
              "type": "string",
              "metadata": {
                "description": "Principal ID of the managed identity."
              }
            }
          },
          "variables": {
            "vmContributorRoleId": "9980e02c-c2be-4d73-94e8-173b1dc7cf3c"
          },
          "resources": [
            {
              "type": "Microsoft.Authorization/roleAssignments",
              "apiVersion": "2022-04-01",
              "name": "[guid(subscription().subscriptionId, parameters('principalId'), variables('vmContributorRoleId'))]",
              "properties": {
                "principalId": "[parameters('principalId')]",
                "roleDefinitionId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', variables('vmContributorRoleId'))]",
                "principalType": "ServicePrincipal"
              }
            }
          ]
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', format('{0}-identity', parameters('baseName')))]"
      ],
      "metadata": {
        "description": "Assign Virtual Machine Contributor for Spot Placement Scores on each target subscription."
      }
    }
  ],
  "outputs": {
    "appUrl": {
      "type": "string",
      "metadata": {
        "description": "Container App FQDN (the public URL)."
      },
      "value": "[format('https://{0}', reference(resourceId('Microsoft.App/containerApps', parameters('baseName')), '2024-03-01').configuration.ingress.fqdn)]"
    },
    "identityPrincipalId": {
      "type": "string",
      "metadata": {
        "description": "Managed Identity principal ID (use for additional RBAC)."
      },
      "value": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', format('{0}-identity', parameters('baseName'))), '2023-01-31').principalId]"
    },
    "identityClientId": {
      "type": "string",
      "metadata": {
        "description": "Managed Identity client ID."
      },
      "value": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', format('{0}-identity', parameters('baseName'))), '2023-01-31').clientId]"
    },
    "containerAppId": {
      "type": "string",
      "metadata": {
        "description": "Open the app in the browser with: az webapp browse --ids <containerAppId>"
      },
      "value": "[resourceId('Microsoft.App/containerApps', parameters('baseName'))]"
    },
    "logAnalyticsId": {
      "type": "string",
      "metadata": {
        "description": "Log Analytics workspace ID (for diagnostics queries)."
      },
      "value": "[resourceId('Microsoft.OperationalInsights/workspaces', format('{0}-logs', parameters('baseName')))]"
    }
  }
}
